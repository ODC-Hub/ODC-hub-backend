{
  "family": "odc-hub-backend-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::741448926181:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "odc-hub-backend",
      "image": "<IMAGE_URI>",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "secrets": [
        {
          "name": "JWT_SECRET",
          "valueFrom": "arn:aws:secretsmanager:eu-west-3:741448926181:secret:odc-hub/JWT_SECRET-b2LhrQ"
        },
        {
          "name": "MONGO_URI",
          "valueFrom": "arn:aws:secretsmanager:eu-west-3:741448926181:secret:odc-hub/MONGO_URI-WSv70D"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/odc-hub-backend",
          "awslogs-region": "eu-west-3",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}